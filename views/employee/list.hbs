<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- DataTables & Buttons Plugin -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.dataTables.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
<style>
      body {
        background: url('https://res.cloudinary.com/dc4dywdvb/image/upload/v1727377999/unnamed_f4ciap.jpg') no-repeat center center fixed;
       
        display: flex;
        background-size: cover;
        height: 90vh;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
      }
      .container {
        max-width: 1350px;
        background-color: rgba(249, 236, 236, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        margin-top: 90px;
      }
      h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #3e50b4;
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
      }
      .table-responsive {
        max-height: 400px;
        overflow-y: auto;
      }
      table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
      }

      th, td {
        text-align:left;
        vertical-align: middle;
        padding: 15px;
      }
     td:nth-child(7) {
        text-align: center;
      }
      td:nth-child(5) {
        text-align: right;
      }
      th {
        background-color: #3e50b4;
        color: white;
        font-weight: bold;
        position: sticky;
        top: 0;
        z-index: 10;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
      }
      td {
        background-color: #f9f9f9;
        transition: background-color 0.3s;
      }

      tr:nth-child(even) td {
        background-color: #bdb5b5;
      }

      tr:hover td {
        background-color: #d8ecfb;
      }

      .btn-sm {
        font-size: 0.875rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
      }

      .form-row {
        margin-bottom: 20px;
      }

      .search-box {
        margin-bottom: 20px;
      }

      #searchBtn {
        background: linear-gradient(45deg, #ff6f61, #de6f9f);
        border: none;
        border-radius: 50px;
        padding: 12px 20px;
        color: white;
        font-size: 1rem;
        font-weight: bold;
        transition: background 0.3s, transform 0.3s;
      }
      #searchBtn:hover {
        background: linear-gradient(45deg, #de6f9f, #ff6f61);
        transform: translateY(-2px);
      }
      .form-control {
        border-radius: 50px;
        padding: 15px;
        border: 1px solid #3e50b4;
      }
      #searchType {
        border: 1px solid #3e50b4;
        border-radius: 50px;
        padding: 10px;
        font-weight: bold;
        color: #3e50b4;
      }

      #searchType option {
        font-weight: normal;
        color: #333;
      }

      #searchType:hover {
        border-color: #0056b3;
        background-color: #e9ecef;
      }

      .text-center {
        font-style: italic;
        font-weight: bold;
      }
      .home-btn {
        background: #3e50b4;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.3s;
      }
      .home-btn:hover {
        background-color: #5f6ec2;
        transform: translateY(-2px);
      }

      .home-btn i {
        margin-right: 8px;
      }

      .header {
        background: #f6f6f6;
        color: white;
        padding: 10px 0;
        text-align: left;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 100;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <a href="/" class="home-btn">
        <i class="fas fa-home"></i> Home
      </a>
    </div>
    <div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0 mx-auto">Employee List</h2>
    <button id="exportButtons" class="btn btn-primary"></button>
</div>
      <div class="form-row search-box">
        <div class="col-md-3">
          <select id="searchType" class="form-control">
            <option value="fullName">Full Name</option>
            <option value="email">Email</option>
            <option value="mobile">Mobile</option>
            <option value="city">City</option>
            <option value="salary">Salary</option>
            <option value="position">Position</option>
            <option value="employeeId">Employee ID</option>
          </select>
        </div>
        <div class="col-md-6">
          <input
            type="text"
            id="searchInput"
            class="form-control"
            placeholder="Search by selected option..."
          />
        </div>
        <div class="col-md-3">
          <button id="searchBtn" class="btn btn-block">Filter</button>
        </div>
      </div>
      <div class="table-responsive">
        <table id="employeeTable" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Full Name</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>City</th>
              <th>Salary</th>
              <th>Position</th>
              <th>Employee ID</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="employeeTableBody">
            {{#if list.length}}
              {{#each list}}
                <tr>
                  <td>{{this.fullName}}</td>
                  <td>{{this.email}}</td>
                  <td>{{this.mobile}}</td>
                  <td>{{this.city}}</td>
                  <td class="salary">{{this.salary}}</td>
                  <td>{{this.position}}</td>
                  <td>{{this.employeeId}}</td>
                  <td>
                    <a
                      href="/employee/edit/{{this._id}}"
                      class="btn btn-primary btn-sm"
                    >
                      Edit
                    </a>
                    <button
                      class="btn btn-danger btn-sm ml-2"
                      onclick="confirmDelete('{{this._id}}')"
                    >
                      Delete
                    </button>
                  </td>
                </tr>
              {{/each}}
            {{else}}
              <tr>
                <td colspan="8" class="text-center">No employees found</td>
              </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
   <script>
  function confirmDelete(employeeId) {
    const confirmation = confirm("Are you sure you want to delete this employee?");
    if (confirmation) {
        window.location.href = `/employee/delete/${employeeId}`;
    }
  }

  function formatSalary(amount) {
    if (amount) {
        let num = amount.toString();
        let lastThree = num.slice(-3); 
        let otherNumbers = num.slice(0, num.length - 3); 
        if (otherNumbers !== '') {
            lastThree = ',' + lastThree;
        }
        let formatted = otherNumbers.replace(/\B(?=(\d{2})+(?!\d))/g, ",") + lastThree; 
        return "₹ " + formatted;
    }
    return "₹ " + amount;
  }

  function formatAllSalaries() {
    let salaryCells = document.querySelectorAll('.salary');
    salaryCells.forEach(function(cell) {
        let salaryValue = cell.innerText.trim();
        if (!isNaN(salaryValue) && salaryValue !== "") {
            let formattedSalary = formatSalary(Number(salaryValue));
            cell.innerText = formattedSalary;
        }
    });
  }

  window.onload = function() {
    formatAllSalaries();
  };

  document.getElementById('searchInput').addEventListener('input', function () {
    const searchType = document.getElementById('searchType').value;
    const searchInput = document.getElementById('searchInput').value.toLowerCase();
    const rows = document.querySelectorAll('#employeeTableBody tr');

    rows.forEach((row) => {
        const valueToCheck = row
            .querySelector(`td:nth-child(${getColumnIndex(searchType)})`)
            .textContent.toLowerCase();

        if (valueToCheck.includes(searchInput)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
  });

  function getColumnIndex(type) {
    switch (type) {
        case 'fullName':
            return 1;
        case 'email':
            return 2;
        case 'mobile':
            return 3;
        case 'city':
            return 4;
        case 'salary':
            return 5;
        case 'position':
            return 6;
        case 'employeeId':
            return 7;
        default:
            return 0;
    }
  }
  $(document).ready(function() {
    $("#employeeTable").DataTable({
        "responsive": true,
        "autoWidth": false,
        "paging": true,
        "ordering": false,
        "searching": false,
        "info": false,
        "buttons": [
            { extend: 'copy', text: 'Copy', exportOptions: { columns: ':not(:last-child)' } },
            { extend: 'csv', text: 'CSV', exportOptions: { columns: ':not(:last-child)' } },
            { extend: 'excel', text: 'Excel', exportOptions: { columns: ':not(:last-child)' } },
            { extend: 'pdf', text: 'PDF', exportOptions: { columns: ':not(:last-child)' } },
            { extend: 'print', text: 'Print', exportOptions: { columns: ':not(:last-child)' } }
        ]
    }).buttons().container().appendTo('#exportButtons');
});
</script>
  </body>
</html>